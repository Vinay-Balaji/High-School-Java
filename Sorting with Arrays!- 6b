 public void bubbleSort2() { 
 int p = 1;
 boolean sorted = false;
while (!sorted)
{
  sorted = true;
     for (int q = 0; q < list.length-p; q++)
     {
         if (list[q] > list[q+1])
            {
                 int temp = list[q];
                 list[q] = list[q+1];
                 list[q+1] = temp;
                 sorted = false;
            }
     }
 p++;
 }
